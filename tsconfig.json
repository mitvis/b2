{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "jsx": "react"
  },
  "types": [
      "webpack-env"
  ],
  "include": [
    "src/**/*.ts",
    "src/../..tsx", "src/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
